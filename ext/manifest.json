{
    "manifest_version": 2,
    "name": "CSS Dig",
    "description": "Collect and analyze CSS.",
    "version": "1.2.7",
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "icons": {
        "16": "i/icon16.png",
        "48": "i/icon48.png",
        "128": "i/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "i/icon19.png",
            "38": "i/icon38.png"
        },
        "default_title": "CSS Dig"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/jquery.min.js"]
        }
    ],
    "web_accessible_resources": [
        "html/dig.html",
        "i/icon48.png",
        "css/cssdig.css",
        "js/cssdig.js"
    ]
}
